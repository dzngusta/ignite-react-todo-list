{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Absolute Paths */
		"baseUrl": "./src",
		"paths": {
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@config/*": ["config/*"],
			"@hooks/*": ["hooks/*"],
			"@providers/*": ["providers/*"],
			"@modules/*": ["modules/*"],
			"@utils/*": ["utils/*"],
			"@mocks/*": ["mocks/*"],
			"@fonts/*": ["assets/fonts/*"],
			"@images/*": ["assets/images/*"],
			"@scss/*": ["assets/scss/*"]
		}
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
